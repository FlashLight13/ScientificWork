<resources>

    <style name="AlgoActionBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/deep_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="PlaceholderTextStyle">
        <item name="android:textColor">@color/lightest_grey</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:minHeight">@dimen/basic_list_item_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListHeaderStyle">
        <item name="android:layout_margin">@dimen/basic_list_header_margin</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="TabsStyle" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/deep_blue</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextColor">@color/lightest_grey</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
</resources>
