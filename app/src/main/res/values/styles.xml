<resources xmlns:app="http://schemas.android.com/tools">

    <style name="AlgoActionBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/deep_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="PlaceholderTextStyle">
        <item name="android:textColor">@color/lightest_grey</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:minHeight">@dimen/list_item_height_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="IndicatedListItem">
        <item name="android:maxHeight">@dimen/list_item_height_medium</item>
        <item name="android:minHeight">@dimen/list_item_height_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListHeaderStyle">
        <item name="android:layout_margin">@dimen/basic_list_header_margin</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="TabsStyle" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/deep_blue</item>
        <item name="tabIndicatorColor">@color/yellow</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextColor">@color/lightest_grey</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd" app:targetApi="19">@dimen/fab_margin</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/lightest_grey</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/yellow</item>
    </style>

    <style name="FloatingActionButtonListFooter">
        <item name="android:minHeight">@dimen/bottom_fab_footer</item>
    </style>

    <style name="Table">
        <item name="android:paddingLeft">@dimen/table_sides_paddings</item>
        <item name="android:paddingRight">@dimen/table_sides_paddings</item>
        <item name="android:paddingStart" app:targetApi="17">@dimen/table_sides_paddings</item>
        <item name="android:paddingEnd" app:targetApi="17">@dimen/table_sides_paddings</item>
    </style>

    <style name="TableHeader">
        <item name="android:minHeight">@dimen/table_header_height</item>
    </style>

    <style name="TableRow">
        <item name="android:minHeight">@dimen/table_row_height</item>
    </style>

    <style name="TableRow.TableHeaderText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/table_column_padding</item>
        <item name="android:paddingStart" app:targetApi="17">@dimen/table_column_padding</item>
    </style>

    <style name="TableRow.TableRowText">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@color/yellow</item>
    </style>
</resources>
