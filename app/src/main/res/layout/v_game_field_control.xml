<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/left"
        android:layout_width="@dimen/game_field_control_button_size"
        android:layout_height="@dimen/game_field_control_button_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top"
        android:src="@drawable/ic_move_left_48dp" />

    <ImageView
        android:id="@+id/top"
        android:layout_width="@dimen/game_field_control_button_size"
        android:layout_height="@dimen/game_field_control_button_size"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/left"
        android:layout_toRightOf="@+id/left"
        android:src="@drawable/ic_move_top_48dp" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="@dimen/game_field_control_button_size"
        android:layout_height="@dimen/game_field_control_button_size"
        android:src="@drawable/ic_move_right_48dp"
        android:layout_alignTop="@+id/bottom"
        android:layout_toRightOf="@+id/bottom"
        android:layout_toEndOf="@+id/bottom" />

    <ImageView
        android:id="@+id/bottom"
        android:layout_width="@dimen/game_field_control_button_size"
        android:layout_height="@dimen/game_field_control_button_size"
        android:layout_toEndOf="@+id/left"
        android:layout_toRightOf="@+id/left"
        android:src="@drawable/ic_move_bottom_48dp"
        android:layout_below="@+id/top" />
</RelativeLayout>