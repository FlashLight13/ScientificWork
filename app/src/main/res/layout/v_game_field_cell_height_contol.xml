<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_up"
        android:layout_width="@dimen/game_field_control_button_size"
        android:layout_height="@dimen/game_field_control_button_size"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_up_selector" />

    <ImageView
        android:id="@+id/img_bot"
        android:layout_width="@dimen/game_field_control_button_size"
        android:layout_height="@dimen/game_field_control_button_size"
        android:src="@drawable/ic_down_selector" />
</LinearLayout>